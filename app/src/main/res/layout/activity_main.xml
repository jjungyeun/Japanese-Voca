<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="日本語の勉強"
        android:fontFamily="@font/pretendard_jp_regular"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/theme_dark_purple"/>

    <android.widget.Button
        android:id="@+id/btn_home_japanese"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="일본어"
        android:background="@drawable/shape_round_button_gray_purple"
        android:textSize="16sp"
        android:layout_margin="15dp" />

    <android.widget.Button
        android:id="@+id/btn_home_chinese_char"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="한자"
        android:background="@drawable/shape_round_button_gray_purple"
        android:textSize="16sp"
        android:layout_margin="15dp" />

</LinearLayout>